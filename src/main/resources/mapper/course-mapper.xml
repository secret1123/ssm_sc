<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="course">
    <insert id="create" parameterType="course" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_ssm.course (
    title, 
    credit
        )
        VALUES (
    #{title}, 
    #{credit}
        );
    </insert>
    <delete id="remove">
        DELETE FROM db_ssm.course
        WHERE course.id = #{id}
    </delete>
    <update id="modify">
        UPDATE db_ssm.course
        SET
    title = #{title}, 
    credit = #{credit}
        WHERE course.id = #{id}
    </update>
    <select id="queryAll" resultType="course">
        SELECT *
        FROM db_ssm.course
        ORDER BY id
    </select>
    <select id="queryById" resultType="course">
        SELECT *
        FROM db_ssm.course
        WHERE course.id = #{id}
    </select>
</mapper>